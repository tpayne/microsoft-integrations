{
  "name": "commsassist",
  "version": "1.0.0",
  "description": "A sample Outlook CommsAgent app",
  "keywords": [
    "Outlook",
    "GenAI",
    "Gemini"
  ],
  "homepage": "https://github.com/tpayne/microsoft-integrations#readme",
  "bugs": {
    "url": "https://github.com/tpayne/microsoft-integrations/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpayne/microsoft-integrations.git"
  },
  "dependencies": {
    "core-js": "^3.36.0",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@linthtml/linthtml": "^0.10.1",
    "@types/office-js": "^1.0.377",
    "@types/office-runtime": "^1.0.35",
    "eslint": "^9.27.0",
    "eslint-plugin-eslint-plugin": "^6.4.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-office-addins": "^4.0.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "npm-run-all2": "8.0.4",
    "office-addin-cli": "^2.0.3",
    "office-addin-debugging": "^6.0.3",
    "office-addin-dev-certs": "^2.0.3",
    "office-addin-lint": "^3.0.3",
    "office-addin-manifest": "^2.0.3",
    "office-addin-prettier-config": "^2.0.1",
    "typescript-eslint": "^8.33.0"
  },
  "prettier": "office-addin-prettier-config",
  "license": "MIT",
  "type": "module",
  "author": "Tim Payne",
  "scripts": {
    "build": "run-s test:gendoc test:lint:* clean dist",
    "certs": "/opt/homebrew/bin/mkcert localhost",
    "clean": "rm -rf dist",
    "dist": "sh ./npm-dist.sh",
    "distdev": "mkdir dist && mkdir dist/public && cp src/outlook/*.js dist/public && cp src/outlook/resources/* dist/public && mv dist/public/manifest.xml dist",
    "docker": "docker build . -t outlookcom",
    "lint": "run-s test:lint:*",
    "start": "npx http-server dist/public -S -C localhost.pem -K localhost-key.pem -p 3000",
    "test": "run-s test:*",
    "test:build": "run-s build",
    "test:certs": "run-s certs",
    "test:gendoc": "npx jsdoc src/outlook/ -d documentation",
    "test:lint:html": "npx linthtml 'src/outlook/resources/*.html'",
    "test:lint:js": "npx eslint src/**/*.js --fix",
    "test:lint:officexml": "npx office-addin-manifest validate src/outlook/resources/manifest.xml",
    "test:start": "run-s start"
  }
}
